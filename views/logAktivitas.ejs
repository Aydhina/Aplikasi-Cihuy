<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Daftar Aktivitas</title>

    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>

<body class="bg-light">

    <%- include('layout/navbar') -%>

        <div class="container my-5">
            <div class="card shadow-sm border-0">
                <div class="card-body">

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="fw-bold mb-0">Log Aktivitas</h4>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle text-center">
                            <thead class="table-dark">
                                <tr>
                                    <th>No.</th>
                                    <th>User</th>
                                    <th>Aktivitas</th>
                                    <th>Waktu Aktivitas</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% if (logs.length===0) { %>
                                    <tr>
                                        <td colspan="4">Belum ada log</td>
                                    </tr>
                                    <% } else { %>
                                        <% logs.forEach((log, i)=> { %>
                                            <tr>
                                                <td>
                                                    <%= i + 1 %>
                                                </td>
                                                <td>
                                                        <%= log.id_user ? (log.id_user.nama_lengkap ||
                                                            log.id_user.username) : "User Tidak Dikenal" %>
                                                </td>
                                                <td>
                                                    <%= log.aktivitas %>
                                                </td>
                                                <td>
                                                    <%= new Date(log.waktu_aktivitas).toLocaleString("id-ID") %>
                                                </td>
                                            </tr>
                                            <% }) %>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>

</body>

</html>