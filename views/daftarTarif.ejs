<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Daftar Tarif</title>

  <!-- Bootstrap -->
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="/fontawesome/css/all.min.css">
</head>
<body class="bg-light">

  <%- include('./layout/navbar') -%>

  <div class="container my-5">
    <div class="card shadow-sm border-0">
      <div class="card-body">

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h4 class="fw-bold mb-0">Daftar Tarif</h4>
          <a href="/tarif/tambah" class="btn btn-warning btn-sm fw-semibold">
            <i class="fa fa-plus me-1"></i> Tambah Tarif
          </a>
        </div>

        <div class="table-responsive">
          <table class="table table-hover align-middle text-center">
            <thead class="table-dark">
              <tr>
                <th>Jenis Kendaraan</th>
                <th>Tarif per Jam</th>
                <th style="width: 120px">Aksi</th>
              </tr>
            </thead>

            <tbody>
              <% tarif.forEach((row) => { %>
                <tr>
                  <td class="fw-semibold text-capitalize">
                    <%= row.jenis_kendaraan %>
                  </td>
                  <td>
                    Rp <%= row.tarif_per_jam.toLocaleString('id-ID') %>
                  </td>
                  <td>
                    <a href="/tarif/edit/<%= row._id %>" class="text-warning me-3">
                      <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                    <a href="/tarif/delete/<%= row._id %>" class="text-danger">
                      <i class="fa-solid fa-trash"></i>
                    </a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>

</body>
</html>
